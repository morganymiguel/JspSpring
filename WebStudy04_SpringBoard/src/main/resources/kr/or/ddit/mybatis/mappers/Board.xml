<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.board.dao.BoardDAO">
<!-- 	게시글의 목록 조회: 페이징 + 검색(제목-title, 작성자-writer, 내용-content, 전체) -->
<!-- 	<select id="selectTotalRecord" resultType="int" parameterType="PagingVO"> -->
<!-- 		SELECT COUNT(*) -->
<!-- 		FROM MEMBER -->
<!-- 		<include refid="searchFrag" /> -->
<!-- 	</select> -->
	<select id="selectBoardList" resultType="BoardVO" parameterType="PagingVO">
		SELECT *
		FROM (
			SELECT A.*, ROWNUM RNUM
			FROM(
				SELECT
					BO_NO,    BO_TITLE,    BO_WRITER,
				    BO_IP,    BO_MAIL,    BO_PASS,
				    BO_CONTENT,  
				    BO_HIT                                        
				FROM FREEBOARD                                   
				<include refid="searchFrag" />    
				ORDER BY BO_NO DESC
			) A
		) B
		<![CDATA[
		WHERE RNUM >= #{startRow} AND RNUM <= #{endRow}
		]]>
	</select>
	
	<select id="selectBoard" parameterType="string" resultMap="boardMap">
	</select>
		

</mapper>